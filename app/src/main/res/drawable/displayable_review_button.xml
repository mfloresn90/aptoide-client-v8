<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:color="@color/white" android:state_pressed="true">
    <shape>
      <solid
          android:color="@color/silver_dark"/>
      <stroke
          android:color="@color/reviews_helpful_stroke_button"
          android:width="1dp"/>
      <corners
          android:radius="10dp"/>
      <padding
          android:bottom="5dp"
          android:left="5dp"
          android:right="5dp"
          android:top="5dp"/>
    </shape>
  </item>
  <item android:color="@color/silver_dark">
    <shape>
      <solid android:color="@color/white"/>
      <stroke
          android:color="@color/reviews_helpful_stroke_button"
          android:width="1dp"/>
      <corners
          android:radius="10dp"/>
      <padding
          android:bottom="5dp"
          android:left="5dp"
          android:right="5dp"
          android:top="5dp"/>
    </shape>
  </item>
</selector>
