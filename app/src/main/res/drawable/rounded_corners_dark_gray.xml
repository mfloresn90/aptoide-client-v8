<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:color="@color/white" android:state_pressed="true">
    <shape>
      <solid
          android:color="@color/dark_gray"/>
      <stroke
          android:color="@color/white"
          android:width="1dp"/>
      <corners
          android:radius="20dp"/>
      <padding
          android:bottom="5dp"
          android:left="5dp"
          android:right="5dp"
          android:top="5dp"/>
    </shape>
  </item>
  <item android:color="@color/dark_gray">
    <shape>
      <solid android:color="@color/white"/>
      <stroke
          android:color="@color/dark_gray"
          android:width="1dp"/>
      <corners
          android:radius="20dp"/>
      <padding
          android:bottom="5dp"
          android:left="5dp"
          android:right="5dp"
          android:top="5dp"/>
    </shape>
  </item>
</selector>
