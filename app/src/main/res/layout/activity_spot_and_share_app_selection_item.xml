<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/HighwayGridViewItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spot_and_share_app_selection_item_selector"
    android:clickable="true"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/highwayGridViewItemIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/highwayGridViewItemName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="2"
        android:ellipsize="end"
        android:focusable="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:text="texto de teste"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        />

  </LinearLayout>

</LinearLayout>
