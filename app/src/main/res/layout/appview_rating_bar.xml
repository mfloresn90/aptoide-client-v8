          android:textColor="?android:attr/textColorSecondary"
          />

      <ProgressBar
          android:id="@+id/appview_rating_bar3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="5dp"
          android:layout_toEndOf="@id/appview_rating_bar_number3"
          android:layout_toRightOf="@id/appview_rating_bar_number3"
          android:max="100"
          android:progressDrawable="@drawable/app_rating_progress_bar_layout"
          style="?android:attr/progressBarStyleHorizontal"
          />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/appview_rating_bars_bottom_margin"
        >

      <ImageView
          android:id="@+id/appview_rating_bar_star2"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="5dp"
          android:layout_marginRight="5dp"
          android:src="@drawable/grid_item_star_empty_small"
          />

      <TextView
          android:id="@+id/appview_rating_bar_number2"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginEnd="5dp"
          android:layout_marginRight="5dp"
          android:layout_toEndOf="@id/appview_rating_bar_star2"
          android:layout_toRightOf="@id/appview_rating_bar_star2"
          android:gravity="center_vertical"
          android:text="2"
          android:textColor="?android:attr/textColorSecondary"
          />

      <ProgressBar
          android:id="@+id/appview_rating_bar2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="5dp"
          android:layout_toEndOf="@id/appview_rating_bar_number2"
          android:layout_toRightOf="@id/appview_rating_bar_number2"
          android:max="100"
          android:progressDrawable="@drawable/app_rating_progress_bar_layout"
          style="?android:attr/progressBarStyleHorizontal"
          />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/appview_rating_bars_bottom_margin"
        >

      <ImageView
          android:id="@+id/appview_rating_bar_star1"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="5dp"
          android:layout_marginRight="5dp"
          android:src="@drawable/grid_item_star_empty_small"
          />

      <TextView
          android:id="@+id/appview_rating_bar_number1"
