          android:layout_marginBottom="5dp"
          android:layout_marginTop="5dp"
          android:layout_toEndOf="@id/appview_rating_bar_number1"
          android:layout_toRightOf="@id/appview_rating_bar_number1"
          android:max="100"
          android:progressDrawable="@drawable/app_rating_progress_bar_layout"
          style="?android:attr/progressBarStyleHorizontal"
          />


    </RelativeLayout>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/numberslayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/appview_rating_bar_rating_number5"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="?android:attr/textColorSecondary"
        />

    <TextView
        android:id="@+id/appview_rating_bar_rating_number4"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="?android:attr/textColorSecondary"
        />

    <TextView
        android:id="@+id/appview_rating_bar_rating_number3"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="?android:attr/textColorSecondary"
        />


    <TextView
        android:id="@+id/appview_rating_bar_rating_number2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="?android:attr/textColorSecondary"
        />

    <TextView
        android:id="@+id/appview_rating_bar_rating_number1"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="?android:attr/textColorSecondary"
        />
  </LinearLayout>

</RelativeLayout>
