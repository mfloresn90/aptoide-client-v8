<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/brick_app_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <ImageView
      android:id="@+id/featured_graphic"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:contentDescription="@null"
      />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:background="@drawable/gradient_black"
      android:gravity="bottom"
      android:orientation="horizontal"
      android:padding="4dp"
      >

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingEnd="1.5dp"
        android:paddingRight="1.5dp"
        android:textColor="?attr/inverseTextColor"
        tools:text="Little Commander worl world II"
        />


    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/app_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="3dp"
        android:clickable="false"
        android:isIndicator="true"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        />

  </RelativeLayout>

</RelativeLayout>