<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebebeb"
    android:orientation="vertical"
    >

  <!--
      android:drawablePadding="18dp"
      android:drawableRight="@drawable/ic_down_arrow"
  -->

  <TextView
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:gravity="center_vertical"
      android:paddingEnd="17.3dp"
      android:paddingLeft="13.3dp"
      android:paddingRight="17.3dp"
      android:paddingStart="13.3dp"
      android:text="@string/additional_information"
      android:textColor="#403f3d"
      android:textSize="18sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingEnd="17.3dp"
      android:paddingLeft="13.3dp"
      android:paddingRight="17.3dp"
      android:paddingStart="13.3dp"
      android:visibility="visible"
      >

    <TextView
        android:id="@+id/website_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_map_appview"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_map_appview"
        android:gravity="center_vertical"
        android:padding="@dimen/appview_developer_padding"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        tools:text="www.aptoide.com"
        />

    <TextView
        android:id="@+id/email_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_mail_appview"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_mail_appview"
        android:gravity="center_vertical"
        android:padding="@dimen/appview_developer_padding"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        tools:text="fabio.dias@aptoide.com"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="6dp"
          android:layout_marginStart="6dp"
          android:src="@drawable/ic_locked_appview"
          />
      <TextView
          android:id="@+id/privacy_policy_label"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:gravity="center_vertical"
          android:maxLines="1"
          android:paddingBottom="@dimen/appview_developer_padding"
          android:paddingLeft="5dp"
          android:paddingStart="5dp"
          android:paddingTop="@dimen/appview_developer_padding"
          android:textColor="?android:attr/textColorSecondary"
          android:textSize="14sp"
          tools:text="N.A."
          />
    </LinearLayout>
    <TextView
        android:id="@+id/permissions_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_permissions_appview"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_permissions_appview"
        android:gravity="center_vertical"
        android:padding="@dimen/appview_developer_padding"
        android:text="@string/permissions"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        style="@style/focusableRowBackground"
        />
  </LinearLayout>

</LinearLayout>
