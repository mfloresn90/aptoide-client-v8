<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_main_layout_row"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:gravity="center"
    android:orientation="vertical"
    style="?attr/backgroundCard"
    >
  <ImageView
      android:id="@+id/store_avatar_row"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:contentDescription="@null"
      android:scaleType="fitCenter"
      android:src="@drawable/ic_avatar_apps"
      />

  <TextView
      android:id="@+id/store_name_row"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:drawablePadding="5dp"
      android:drawableStart="@drawable/icon_store"
      android:ellipsize="end"
      android:gravity="center_horizontal"
      android:maxLines="1"
      android:textColor="@color/followed_stores_store_name_color"
      android:textSize="12sp"
      tools:text="@string/apps"
      />
</LinearLayout>