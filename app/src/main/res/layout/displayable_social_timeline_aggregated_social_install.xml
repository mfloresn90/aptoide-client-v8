<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Aptoide.Card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <include layout="@layout/apps_timeline_multiple_heads_card_header"/>

    <TextView
        android:id="@+id/social_shared_by"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="7dp"
        android:text="@string/social_timeline_shared_by"
        android:textStyle="italic"
        android:visibility="gone"
        tools:text="shared by Jonenz"
        tools:visibility="visible"
        />

    <include layout="@layout/apps_timeline_recommendation_body"/>

    <LinearLayout
        android:id="@+id/timeline_sub_minimal_card_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="@string/see_more"
        android:textAllCaps="true"
        android:visibility="gone"
        tools:visibility="visible"
        style="@style/Aptoide.TextView.Regular.XS.GreyFog"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:background="@color/timeline_separator"
        android:visibility="visible"
        />

    <include
        layout="@layout/social_bar_timeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

  </LinearLayout>
</android.support.v7.widget.CardView>