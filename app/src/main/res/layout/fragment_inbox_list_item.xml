<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:layout_marginEnd="19dp"
      android:layout_marginLeft="19dp"
      android:layout_marginRight="19dp"
      android:layout_marginStart="19dp"
      android:layout_marginTop="15dp"
      >

    <ImageView
        android:id="@+id/fragment_inbox_list_item_image"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="center|left"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@id/fragment_inbox_list_item_image"
        android:layout_toRightOf="@id/fragment_inbox_list_item_image"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/fragment_inbox_list_title"
          android:layout_width="match_parent"
          android:maxLines="1"
          android:text="cenas"
          style="@style/Aptoide.TextView.Regular.S.GreyMedium"
          />

      <TextView
          android:id="@+id/fragment_inbox_list_body"
          android:layout_width="match_parent"
          android:maxLines="1"
          android:text="cenas"
          style="@style/Aptoide.TextView.Regular.S.Greyfog"
          />

    </LinearLayout>

  </RelativeLayout>

</android.support.v7.widget.CardView>