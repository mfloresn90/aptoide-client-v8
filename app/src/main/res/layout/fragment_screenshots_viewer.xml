<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenshots_background_color"
    >


  <cm.aptoide.pt.view.custom.AptoideViewPager
      android:id="@+id/screen_shots_pager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />


  <ImageView
      android:id="@+id/btn_close_screenshots_window"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:padding="10dp"
      android:src="@drawable/ic_close_btn"
      />

</RelativeLayout>
