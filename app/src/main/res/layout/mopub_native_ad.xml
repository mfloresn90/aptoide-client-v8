<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:id="@+id/displayable_social_timeline_article_header"
      android:layout_width="match_parent"
      android:layout_height="63.3dp"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/card_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12.7dp"
        android:layout_marginStart="12.7dp"
        android:layout_marginTop="14dp"
        android:background="@null"
        android:src="@mipmap/ic_launcher"
        tools:ignore="contentDescription"
        />

    <TextView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="14.7dp"
        android:lines="1"
        android:textColor="@color/black_87_alpha"
        tools:text="Best Android App Ad"
        style="@style/Aptoide.TextView.Regular.S.Grey"
        />

    <TextView
        android:id="@+id/card_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_title"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:layout_marginStart="72dp"
        android:lines="1"
        android:text="@string/timeline_title_sponsored"
        style="@style/Aptoide.TextView.Regular.XS.Grey"
        />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@+id/card_custom_view_line_separator"
        android:layout_alignRight="@+id/card_custom_view_line_separator"
        android:layout_marginTop="@dimen/appstimeline_card_icon"
        android:src="@drawable/appstimeline_recommendation_compass_icon"
        />

    <View
        android:id="@+id/card_custom_view_line_separator"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:background="@color/timeline_separator"
        />
  </RelativeLayout>

  <TextView
      android:id="@+id/timeline_ad_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/displayable_social_timeline_article_header"
      android:layout_margin="8dp"
      tools:text="SOLID principles 101.\nprogram to interface not implementation"
      />

  <ImageView
      android:id="@+id/timeline_ad_image"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/timeline_ad_description"
      android:layout_margin="8dp"
      android:background="@null"
      android:src="@drawable/addressbook_graphic"
      />
  <Button
      android:id="@+id/timeline_ad_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignEnd="@+id/timeline_ad_image"
      android:layout_alignRight="@id/timeline_ad_image"
      android:layout_below="@id/timeline_ad_image"
      android:layout_margin="8dp"
      tools:text="install"
      style="@style/Aptoide.Button.Ghost.ThinBlackAlpha"
      />


</RelativeLayout>

