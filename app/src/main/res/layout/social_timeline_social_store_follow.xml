<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/follow_store_bar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="13.7dp"
    android:layout_marginStart="13.7dp"
    android:layout_marginTop="7dp"
    android:background="@color/white"
    android:orientation="horizontal"
    >

  <ImageView
      android:id="@+id/social_shared_store_avatar"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_marginLeft="10.7dp"
      android:layout_marginStart="10.7dp"
      tools:ignore="contentDescription"
      tools:src="@color/aptoide_tv"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="60dp"
      android:layout_marginLeft="13.7dp"
      android:layout_marginStart="13.7dp"
      android:layout_toEndOf="@id/social_shared_store_avatar"
      android:layout_toRightOf="@id/social_shared_store_avatar"
      android:gravity="center_vertical"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        tools:text="Kipidap"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/social_number_of_followers_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/user_shape"
          android:drawablePadding="4dp"
          android:drawableStart="@drawable/user_shape"
          android:textSize="10sp"
          tools:text="1M"
          />

      <TextView
          android:id="@+id/social_number_of_apps_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"
          android:drawableLeft="@drawable/number_of_apps"
          android:drawablePadding="4dp"
          android:drawableStart="@drawable/number_of_apps"
          android:textSize="10sp"
          tools:text="2352"
          />
    </LinearLayout>
  </LinearLayout>

  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      >

    <Button
        android:id="@+id/follow_btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_border_orange3"
        android:text="@string/follow"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:textColor="@color/app_view_follow_orange"
        android:textSize="8.4sp"
        />
  </FrameLayout>

</RelativeLayout>
